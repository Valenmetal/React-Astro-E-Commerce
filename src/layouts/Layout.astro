---
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" href="../../public/Logo.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>

	<body>
		<Navbar />
		<slot />
		<Footer />
	</body>
</html>

<style is:global lang="scss">
	@import url("https://fonts.googleapis.com/css?family=Work+Sans:300,600");
	@import url("https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700;800;900&display=swap");

	:root {
		--accent: 186, 186, 186;
		--white: #ededed;
		--dark-grey: #1e2022;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			#9b9b9b 30%,
			white 60%
		);

		--step--2: clamp(0.74rem, calc(0.68rem + 0.31vw), 1.06rem);
		--step--1: clamp(1.2rem, calc(0.8rem + 0.51vw), 1.21rem);
		--step-0: clamp(1.6rem, calc(0.92rem + 1vw), 1.88rem);
		--step-1: clamp(1.28rem, calc(1.07rem + 1.19vw), 2.5rem);
		--step-2: clamp(1.53rem, calc(1.22rem + 1.76vw), 3.33rem);
		--step-3: clamp(1.84rem, calc(1.39rem + 2.54vw), 4.44rem);
		--step-4: clamp(2.2rem, calc(1.57rem + 3.63vw), 5.92rem);
		--step-5: clamp(2.64rem, calc(1.75rem + 5.12vw), 7.89rem);
		--step-6: clamp(3.17rem, calc(1.92rem + 7.17vw), 10.52rem);
	}
	body {
		margin: 0;
		background: rgb(var(--accent));
		font-family: "Inter", sans-serif;
		font-weight: 500;
	}
</style>
